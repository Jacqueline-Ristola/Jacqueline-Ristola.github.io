@article{ristolaQueeringMetaverseEnvisioning2025a,
	title = {Queering the {Metaverse}: {Envisioning} the {Future} of {Embodiment} in {VR}},
	volume = {4},
	issn = {2731-4650, 2731-4669},
	shorttitle = {Queering the {Metaverse}},
	url = {https://link.springer.com/10.1007/s44206-025-00199-2},
	doi = {10.1007/s44206-025-00199-2},
	abstract = {Abstract
            This article engages in a queer and trans line of critique to examine the metaverse’s capabilities for envisioning and prototyping new forms of embodiment through virtual reality (VR). As major corporations such as Meta envision the metaverse as the embodied Internet of the future, this article examines to what extent metaverse VR holds the capacity to impart trans knowledge and experience of embodiment. This article engages in a close reading of Meta’s Horizon Worlds VR program for its affordances and limitations in terms of queer and trans theorizations of embodiment. It analyzes how Horizon Worlds’ avatar aesthetics, avatar design system, and its ability to facilitate connection curtail queer and trans epistemologies of the body. The article then contrasts this with the VR project Virtual Queerality for how it embraces glitch and enmeshment, disrupting the binary systems of gender knowledge instead embody queer and trans embodiment. It then ends with a discussion of VR program VRChat and its popularity with the Furry community as example of VR technology unleashed to enable the prototyping of the body.},
	language = {en},
	number = {2},
	urldate = {2025-10-31},
	journal = {Digital Society},
	author = {Ristola, Jacqueline},
	month = aug,
	year = {2025},
	pages = {43},
}

